<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:background="#c8ffb7"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#daffcf">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgPlay"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/play" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul :"
            android:id="@+id/txtJudulL"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgPlay"
            android:layout_toEndOf="@+id/imgPlay"
            android:textColor="#003d08"
            android:textSize="17dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penyanyi :"
            android:id="@+id/txtPenyanyiL"
            android:layout_below="@+id/txtJudulL"
            android:layout_alignLeft="@+id/txtJudulL"
            android:layout_alignStart="@+id/txtJudulL"
            android:textColor="#003d08"
            android:textSize="15dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:id="@+id/txtJudul"
            android:layout_alignTop="@+id/txtJudulL"
            android:layout_toRightOf="@+id/txtJudulL"
            android:layout_toEndOf="@+id/txtJudulL"
            android:textColor="#003d08"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penyanyi"
            android:id="@+id/txtPenyanyi"
            android:layout_alignTop="@+id/txtPenyanyiL"
            android:layout_toRightOf="@+id/txtPenyanyiL"
            android:layout_toEndOf="@+id/txtPenyanyiL"
            android:textColor="#003d08"
            android:textSize="15dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/iPlay"
            android:layout_alignTop="@+id/txtPenyanyi"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/play"
            android:visibility="gone"
            android:isScrollContainer="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>